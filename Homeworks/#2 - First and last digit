int main()
{
    int liczba, pierwsza, a = 1;  /// enigmatyczna nazwa ,,a'''
    while (a == 1) {

        cout << "Podaj liczbe:" << endl;
    cin >> liczba;
    pierwsza = liczba;
    while (pierwsza >= 10) {
        pierwsza = pierwsza / 10;
    }
    liczba = liczba % 10;  /// klarowniej użyć osobnej zmiennej np. ,,ostatnia'''
    cout << "Pierwsza cyfra tej liczby to: " << pierwsza << ", a ostatnia to: " << liczba << endl;
    cout << "Jesli chcesz kontynuowac nacisnij 1, jesli nie - dowolny znak" << endl;
